# LED trigger support
config RFKILL_LEDS
	bool
	depends on RFKILL
	depends on LEDS_TRIGGERS = y || RFKILL = LEDS_TRIGGERS
	default y

config RFKILL_INPUT
	bool "RF switch input support" if EMBEDDED
	depends on RFKILL
	depends on INPUT = y || RFKILL = INPUT
	default y if !EMBEDDED
